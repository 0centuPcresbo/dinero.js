{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    "paths": {
      "@dinero.js/*": [
        "packages/*/src",
      ],
      "@dinero.js/core/calculator/number": [
        "packages/core/src/calculator/number",
      ],
      "@dinero.js/core/calculator/bigint": [
        "packages/core/src/calculator/bigint",
      ],
      "@dinero.js/fp/calculator/number": [
        "packages/fp/src/calculator/number",
      ],
    },
    "lib": [
      "esnext"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
